						    	{{ form_label(form.adresse.cp) }}
						    </div>
	                        <div class="col-sm-8">
						    	{{ form_widget(form.adresse.cp, {'attr': { 'class': 'form-control'}}) }}
						    </div>
						</div>

	                    <div class="row">
	                        <div class="col-sm-2" style="font-size: 20px;">
						    	{{ form_label(form.adresse.ville) }}
						    </div>
	                        <div class="col-sm-8">
