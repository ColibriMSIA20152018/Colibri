{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container">
        <div class="" style="width:100%;float:left">
            <h1>Liste des entrepot</h1></br>
			<table class="table table-striped">
				<th>Entrepot</th>
				<th>Stock produit</th>
				<th>Qte</th>
			{% for entrepot in listEntrepot %}
			<tr><td>{{entrepot.libelle}}</td><td></td><td></td></tr>
				{% for stock in entrepot.stock %}
				<tr>
					<td></td><td>{{stock.produit.libelle}}</td><td>{{stock.quantite}}</td>
				</tr>
				{% endfor %}
			{% endfor %}
			</table>
        </div>
    </div>
{% endblock %}