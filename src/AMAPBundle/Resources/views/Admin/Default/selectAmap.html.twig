{% extends 'admin.html.twig' %}

    {% block body %}
        {% if app.session.get('amap') %}
                <div class="container" style="text-align: center">
                    <br/>
                    <div class="" style="width:100%;float:left">
                        <h1>Changer d'AMAP a administer</h1><br/>
                        {{ form_start(form) }}
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-1" style="font-size: 20px;">
                                        {{ form_label(form.amap) }}
                                    </div>
                                    <div class="col-sm-4">
                                        {{ form_widget(form.amap, {'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                </div></br>

                                <div class="row">
                                    <div class="col-sm-4"></div>
                                    <div class="col-sm-4">
                                        {{ form_label(form.ajouter) }}
                                        {{ form_widget(form.ajouter, {'attr': { 'class': 'btn btn-success'}}) }}
                                    </div>
                                </div>
                            </div>  
                        {{ form_end(form) }}
                    </div>
                </div>
                <br/>
        {% else %}
            <div class="container" style="text-align: center">
                    <br/>
                    <div class="" style="width:100%;float:left">
                        <h1>Selection d'une AMAP a administrer</h1><br/>
                        {{ form_start(form) }}
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-1" style="font-size: 20px;">
                                        {{ form_label(form.amap) }}
                                    </div>
                                    <div class="col-sm-4">
                                        {{ form_widget(form.amap, {'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                </div></br>

                                <div class="row">
                                    <div class="col-sm-4"></div>
                                    <div class="col-sm-4">
                                        {{ form_label(form.ajouter) }}
                                        {{ form_widget(form.ajouter, {'attr': { 'class': 'btn btn-success'}}) }}
                                    </div>
                                </div>
                            </div>  
                        {{ form_end(form) }}
                    </div>
                </div>
                <br/>
        {% endif %}
    {% endblock %}
