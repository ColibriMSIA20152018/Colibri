{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="" style="width:50%;float:left">
            <h1>AJOUTER UN NOUVEAU PRODUIT</h1>
            <br/>
            {{ form_start(form) }}
                {{ form_label(form.libelle) }}
                <br/>
                {{ form_widget(form.libelle) }}
                <br/>
                {{ form_label(form.famille) }}
                <br/>
                {{ form_widget(form.famille) }}
                <br/>
            {{ form_end(form) }}
            <br/>
            <br/>
        </div>
        <div class="" style="width:50%;float:left">
            <h1>AJOUTER UN PRODUIT AU STOCK</h1>
            <br/>
            {{ form_start(form2) }}
                {{ form_label(form2.produit) }}
                <br/>
                {{ form_widget(form2.produit) }}
                <br/>
                {{ form_label(form2.quantite) }}
                <br/>
                {{ form_widget(form2.quantite) }}
                <br/>
            {{ form_end(form2) }}
            <br/>
            <br/>
        </div>
        <div class="" style="width:50%;float:left">
            <h1>AJOUTER UNE FAMILLE DE PRODUIT</h1>
            {{ form_start(form3) }}
                {{ form_label(form3.libelle) }}
                <br/>
                {{ form_widget(form3.libelle) }}
            {{ form_end(form3) }}
        </div>
        <div class="" style="width:50%;float:left">
            <h1>LISTE FAMILLE DE PRODUIT</h1>
            {% for item in listFamille %}
                <h3>{{ item.libelle }}</h3>
            {% endfor %}
        </div>
        <div class="" style="width:100%;float:left">
            <h1>CREER UNE SAISON</h1>
            {{ form_start(form4) }}
                {{ form_label(form4.libelle) }}
                <br/>
                {{ form_widget(form4.libelle) }}
            {{ form_end(form4) }}
        </div>
        <div class="" style="width:100%;float:left">
            <h1>STOCK ACTUEL</h1>

            {% for item in stock %}
                <br/>
                {{ item.produit.libelle }}
                <br/>
                {{ item.quantite }} KG
                <br/>
            {% endfor %}
        </div>
        <br/><br/><br/><br/>
        <div class="" style="width:100%;float:left">
            <table class="table table-striped">
                <th>Nom du produit</th><th>Famille</th>
                {% for item in listProduit %}
                <tr>
                    <td>{{item.libelle}}</td><td>{{item.famille.libelle}}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}