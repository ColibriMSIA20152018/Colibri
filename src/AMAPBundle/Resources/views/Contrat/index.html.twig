{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="" style="width:100%;float:left">
            <h1>CONTRATS</h1>
            <div class="" style="width:100%;float:left">
                <table class="table table-striped">
                    <th>Producteur</th>
					<th>Consommateur</th>
					<th>Amap</th>
					<th>Panier</th>
                {% for item in listcontrat %}
                    <tr>
                        <td>{{item.producteur.nom}}</td>
						<td>{{item.consommateur.nom}}</td>
						<td>{{item.amap.libelle}}</td>
						<td>{{item.panier.libelle}}</td>
                    </tr>
                {% endfor %}
                </table>
            </div>
        </div>
        <br/><br/>
        <div class="" style="width:100%;float:left">
            <h1>Créer un contrat</h1>
            {{ form_start(form) }}

            {{ form_end(form) }}
        </div>
        <br/>
        <br/>
        <br/>
        <br/>
        <h1>Quantité à produire pour les producteurs</h1>
        <div>
            <table class="table table-striped">
                <th>Producteur</th>
                <th>Produit</th>
                <th>Quantité</th>
            {% for producteur in tabProd %}
                <tr>
                    <td style="background-color:yellow"><b>{{producteur[0]}}</b></td>
                    <td></td>
                    <td></td>
                {% for panierproduit in producteur[1].panierproduit %}
                    <tr>
                        <td></td>
                        <td>{{panierproduit.produit.libelle}}</td>
                        <td>{{panierproduit.quantite}}</td>
                    </tr>
                {% endfor %}
                </tr>
            {% endfor %}
            </table>
        </div>
     </div>
{% endblock %}